<!-- Navbar -->
<!-- Remove "navbar-sticky" class to make navigation bar scrollable with the page -->
<header class="header navbar navbar-expand-lg navbar-sticky d-flex flex-column shadow-sm bg-light <%= 'position-absolute' if current_page?(root_path) %>">
    <div class="container">
        <a class="d-block d-flex align-items-center navbar-brand me-lg-5" href="<%= root_path %>" data-turbo-preload>
            <img src="<%= asset_path("logo") %>" alt="Gelbhart Inn. Logo" width="70">
        </a>
        <div id="navbarNav" class="offcanvas offcanvas-end">
            <div class="offcanvas-header border-bottom">
                <h5 class="offcanvas-title">Menu</h5>
                <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body">
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <div class="d-flex align-items-center position-relative">
                            <a class="nav-link pe-0 <%= is_active(services_path) || is_active(pharmaceutical_path) || is_active(real_estate_path) %>" href="<%= services_path %>" data-turbo-preload style="border-right: none;">
                                Services
                            </a>
                            <button class="btn dropdown-toggle dropdown-toggle-split ps-1 pe-2" type="button" data-bs-toggle="dropdown" aria-expanded="false" style="border: none; background: none; color: inherit; font-size: 0.8rem; margin-left: -2px;">
                                <span class="visually-hidden">Toggle Dropdown</span>
                            </button>
                        </div>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="<%= services_path %>" data-turbo-preload>
                                <i class="bx bx-grid-alt text-primary me-2"></i>
                                All Services
                            </a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="<%= pharmaceutical_path %>" data-turbo-preload>
                                <i class="bx bxs-capsule text-primary me-2"></i>
                                Pharmaceutical
                            </a></li>
                            <li><a class="dropdown-item" href="<%= real_estate_path %>" data-turbo-preload>
                                <i class="bx bxs-buildings text-primary me-2"></i>
                                Real Estate
                            </a></li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a href="<%= team_path %>" class="nav-link <%= is_active(team_path) %>" data-turbo-preload>Team</a>
                    </li>
                    <li class="nav-item">
                        <a href="<%= contacts_path %>" class="nav-link <%= is_active(contacts_path) %>" data-turbo-preload>Contact Us</a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="form-check form-switch mode-switch ms-auto " data-bs-toggle="mode">
            <label class="form-check-label" for="theme-mode"><i class="bx bx-bulb" role="theme" aria-label="Light Mode"><span class="d-none">Light Mode</span></i></label>
            <input name="theme-mode" type="checkbox" class="form-check-input" id="theme-mode">
            <label class="form-check-label" for="theme-mode"><i class="bx bxs-bulb" role="theme" aria-label="Dark Mode"><span class="d-none">Dark Mode</span></i></label>
        </div>
        <button type="button" class="navbar-toggler ms-4" data-bs-toggle="offcanvas" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</header>