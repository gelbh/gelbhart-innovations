<footer class="footer bg-dark dark-mode">
  <div class="container text-center py-4 py-sm-5 px-3">
    <div class="justify-content-center mb-3 mb-sm-4 <%= 'd-none' if home_page? %>">
      <%= link_to root_path, data: { turbo_preload: true } do %>
        <%= image_tag "logo.png", alt: "Gelbhart Inn. Logo", width: 80, class: "footer-logo" %>
      <% end %>
    </div>

    <div class="d-none d-sm-block">
      <div class="pb-2 pb-sm-3">
        <ul class="nav justify-content-center flex-wrap">
          <li class="nav-item"><%= link_to t('nav.home'), root_path, class: "nav-link py-1 py-sm-2" %></li>
          <li class="nav-item"><%= link_to t('nav.services'), services_path, class: "nav-link py-1 py-sm-2" %></li>
          <li class="nav-item"><%= link_to t('nav.team'), team_path, class: "nav-link py-1 py-sm-2" %></li>
          <li class="nav-item"><%= link_to t('nav.contact'), contact_path, class: "nav-link py-1 py-sm-2" %></li>
        </ul>
      </div>
    </div>

    <div class="fs-xs text-center mt-3 mt-sm-4">
      <div class="mb-2">
        <span class="text-light opacity-50">&copy; <%= t('footer.copyright') %> </span>
        <%= link_to t('site.name'), "https://gelbhart.com/", class: "nav-link d-inline p-0", rel: "noopener", "aria-label": "Gelbhart Inn. Website" %>
      </div>
      <div class="pt-1 pt-sm-2">
        <span class="text-light opacity-50 d-none d-sm-inline"><%= t('footer.legal_notice') %> </span>
        <%= link_to t('footer.terms_and_conditions'), tos_path, class: "nav-link d-inline p-0" %>
        <span class="text-light opacity-50"> <%= t('footer.and') %> </span>
        <%= link_to t('footer.privacy_policy'), tos_path, class: "nav-link d-inline p-0" %>
      </div>
    </div>
  </div>
</footer>
