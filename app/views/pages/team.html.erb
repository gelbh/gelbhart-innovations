<!-- Jarallax -->
<%= render 'shared/jarallax' %>

<!-- Breadcrumb -->
<%= render 'shared/breadcrumb' %>

<!-- Brands (Carousel) -->
<section class="container py-2 pb-lg-5 px-5">
  <h2 class="text-center pb-md-2">Our leadership</h2>
  <div class="swiper mx-n2" data-swiper-options='{
    "centerInsufficientSlides": true,
    "slidesPerView": 3,
    "spaceBetween": 40,
    "pagination": {
      "el": ".swiper-pagination",
      "clickable": true
    },
    "breakpoints": {
      "500": {
        "slidesPerView": 3,
        "spaceBetween": 60
      },
      "650": {
        "slidesPerView": 3,
        "spaceBetween": 80
      },
      "900": {
        "slidesPerView": 3,
        "spaceBetween": 100
      },
      "1100": {
        "slidesPerView": 3,
        "spaceBetween": 120
      }
    }
  }'>
    <div class="swiper-wrapper">

      <!-- Team Members -->
      <% @members.each do |member| %>
        <div class="swiper-slide py-3 px-2 card border-0 bg-transparent">
          <div class="position-relative team-card-wrapper shadow-sm rounded-3" data-bs-toggle="modal" data-bs-target="#<%= member.first_name %>">
            <img src="<%= asset_path(member.image_filename) %>" class="rounded-3" alt="<%= member.name %>">
            <div class="card-img-overlay rounded-3 team-overlay" data-bs-toggle="tooltip" data-bs-placement="top" title="Click me for more info!">
              <div class="linkedin-wrapper">
                <a href="<%= member.linkedin_url %>" target="_blank" class="btn btn-icon btn-secondary btn-linkedin btn-lg bg-white me-2" onclick="event.stopPropagation();">
                  <i class="bx bxl-linkedin"></i>
                </a>
                <% if member.github? %>
                  <a href="<%= member.github_url %>" target="_blank" class="btn btn-icon btn-secondary btn-github btn-lg bg-white" onclick="event.stopPropagation();">
                    <i class="bx bxl-github"></i>
                  </a>
                <% end %>
              </div>
            </div>
          </div>
          <div class="card-body text-center px-4 py-3 d-flex flex-column align-items-center">
            <h3 class="fs-lg fw-semibold pt-1 mb-2 text-center" style="word-break: normal; overflow-wrap: break-word; white-space: normal;"><%= member.name %></h3>
          </div>
        </div>
      <% end %>

    </div>
    <!-- Pagination (bullets) -->
    <div class="swiper-pagination position-relative pt-2 mt-4"></div>
  </div>

  <!-- Team Modals -->
  <% @members.each do |member| %>
    <div class="modal fade team-modal" id="<%= member.first_name %>" tabindex="-1" role="dialog" aria-labelledby="<%= member.first_name %>Label" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <div class="d-flex align-items-center gap-4 w-100">
              <div class="profile-image-wrapper flex-shrink-0">
                <img src="<%= asset_path(member.image_filename) %>" alt="<%= member.name %>">
              </div>
              <div class="flex-grow-1">
                <h5 class="modal-title" id="<%= member.first_name %>Label"><%= member.name %></h5>
                <div class="social-links">
                  <a href="<%= member.linkedin_url %>" target="_blank" class="linkedin-link">
                    <i class="bx bxl-linkedin fs-5"></i>
                    <span>Connect on LinkedIn</span>
                  </a>
                  <% if member.github? %>
                    <a href="<%= member.github_url %>" target="_blank" class="github-link">
                      <i class="bx bxl-github fs-5"></i>
                      <span>View GitHub Profile</span>
                    </a>
                  <% end %>
                </div>
              </div>
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <%= team_member_bio(member) %>
          </div>
        </div>
      </div>
    </div>
  <% end %>

</section>
