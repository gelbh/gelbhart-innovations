<!-- Jarallax -->
<%= render 'shared/jarallax' %>

<div class="bg-secondary">
  <!-- Breadcrumb -->
  <%= render 'shared/breadcrumb' %>

  <!-- Page title + Services grid -->
  <section class="container py-2 pb-md-4 pb-lg-5">
    <div class="d-flex align-items-center justify-content-between mb-4">
      <h1 class="mb-0">Real Estate Services</h1>
      <a href="<%= services_path %>" class="btn btn-outline-primary" data-turbo-preload>
        <i class="bx bx-arrow-back me-2"></i>All Services
      </a>
    </div>
    <div class="row row-cols-1 row-cols-md-2">

      <!-- Items -->
      <% @real_estate_services.each do |service| %>
        <div class="col py-4 my-2 my-sm-3">
          <%= render "shared/service_card",
                     title: service.title,
                     description: service.description,
                     icon: service.icon,
                     gradient: "linear-gradient(135deg, #11998e 0%, #38ef7d 100%)" %>
        </div>
      <% end %>

    </div>
  </section>
</div>
