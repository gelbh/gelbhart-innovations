<% badge_style = "background-color: #529fcb; color: white;" %>

<div class="card border-0 shadow-sm mb-4 mb-md-5">
  <div class="card-body p-4 p-sm-5">
    <div class="d-flex align-items-center mb-3 mb-sm-4">
      <div class="d-flex align-items-center justify-content-center rounded-circle bg-primary bg-opacity-10 flex-shrink-0 me-3" style="width: 48px; height: 48px;">
        <i class="bx bx-file-blank text-primary fs-3"></i>
      </div>
      <h2 class="h3 mb-0"><%= t('documents.tos.title') %></h2>
    </div>
    <div class="list-group list-group-flush">
      <% t('documents.tos.items').each_with_index do |item, index| %>
        <div class="list-group-item border-0 px-0 py-3">
          <div class="d-flex align-items-start">
            <span class="badge me-3 mt-1" style="<%= badge_style %>"><%= index + 1 %></span>
            <p class="mb-0"><%= item %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

