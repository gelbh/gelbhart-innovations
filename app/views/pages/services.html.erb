<%= render 'shared/jarallax' %>

<div class="bg-secondary">
  <%= render 'shared/breadcrumb' %>

  <section class="container py-2 pb-md-4 pb-lg-5 px-3 px-sm-4">
    <h1 class="pb-3 pb-sm-4 fs-2 fs-sm-1"><%= t('pages.services.title') %></h1>
    <div class="row row-cols-1 row-cols-md-2 justify-content-center">
      <div class="col py-3 py-sm-4 my-1 my-sm-2 my-md-3">
        <%= render "shared/service_card",
                   title: t('pages.services.pharmaceutical.title'),
                   subtitle: t('pages.services.pharmaceutical.subtitle'),
                   description: t('pages.services.pharmaceutical.description'),
                   icon: AppConstants::SERVICE_ICONS[:pharmaceutical],
                   icon_modifier: AppConstants::SERVICE_ICON_MODIFIERS[:pharmaceutical],
                   gradient: AppConstants::SERVICE_GRADIENTS[:pharmaceutical],
                   href: pharmaceutical_path,
                   wrapper_options: { data: { turbo_preload: true } } %>
      </div>

      <div class="col py-3 py-sm-4 my-1 my-sm-2 my-md-3">
        <%= render "shared/service_card",
                   title: t('pages.services.real_estate.title'),
                   subtitle: t('pages.services.real_estate.subtitle'),
                   description: t('pages.services.real_estate.description'),
                   icon: AppConstants::SERVICE_ICONS[:real_estate],
                   icon_modifier: AppConstants::SERVICE_ICON_MODIFIERS[:real_estate],
                   gradient: AppConstants::SERVICE_GRADIENTS[:real_estate],
                   href: real_estate_path,
                   wrapper_options: { data: { turbo_preload: true } } %>
      </div>
    </div>
  </section>
</div>
