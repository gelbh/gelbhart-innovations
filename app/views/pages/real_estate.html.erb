<style>
.service-card:hover .service-icon {
  transform: translateY(-3px) scale(1.1);
  box-shadow: 0 10px 25px rgba(17, 153, 142, 0.4) !important;
}

.service-card:hover .service-icon i {
  transform: scale(1.2);
}

.service-icon {
  position: relative;
  overflow: hidden;
}

.service-icon::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: linear-gradient(45deg, transparent, rgba(255,255,255,0.2), transparent);
  transition: transform 0.6s;
  transform: translateX(-100%) translateY(-100%) rotate(45deg);
}

.service-card:hover .service-icon::before {
  transform: translateX(100%) translateY(100%) rotate(45deg);
}
</style>

<!-- Jarallax -->
<%= render 'shared/jarallax' %>

<div class="bg-secondary">
  <!-- Breadcrumb -->
  <%= render 'shared/breadcrumb' %>

  <!-- Page title + Services grid -->
  <section class="container py-2 pb-md-4 pb-lg-5">
    <h1 class="pb-4">Real Estate Services</h1>
    <div class="row row-cols-1 row-cols-md-2">

      <!-- Items -->
      <% for service in @real_estate_services do %>
        <div class="col py-4 my-2 my-sm-3">
          <a class="card card-hover service-card h-100 border-0 shadow-sm text-decoration-none pt-5 px-sm-3 px-md-0 px-lg-3 pb-sm-3 pb-md-0 pb-lg-3 me-xl-2">
            <div class="card-body pt-3">
              <div class="service-icon d-inline-block position-absolute top-0 translate-middle-y d-flex align-items-center justify-content-center rounded-circle shadow-lg"
                   style="width: 80px; height: 80px; background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%); transition: all 0.3s ease;">
                <i class="<%= service[1] %> text-white" style="font-size: 2.2rem; transition: transform 0.3s ease;"></i>
              </div>
              <h2 class="h4 d-inline-flex align-items-center">
                <%= service[0] %>
              </h2>
              <div class="fs-sm text-body mb-0">
                <ul>
                  <% service[2].each do |item| %>
                    <li class="mb-2">â€¢ <%= item %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </a>
        </div>
      <% end %>

    </div>
  </section>
</div>
