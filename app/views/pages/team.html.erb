<!-- Jarallax -->
<%= render 'shared/jarallax' %>

<!-- Breadcrumb -->
<%= render 'shared/breadcrumb' %>

<!-- Brands (Carousel) -->
<section class="container py-2 pb-lg-5 px-3 px-sm-4 px-md-5">
  <h2 class="text-center pb-2 pb-md-3 fs-4 fs-md-3">Our leadership</h2>
  <div class="swiper mx-n2" data-swiper-options='{
    "centerInsufficientSlides": true,
    "slidesPerView": 1,
    "spaceBetween": 20,
    "pagination": {
      "el": ".swiper-pagination",
      "clickable": true
    },
    "breakpoints": {
      "400": {
        "slidesPerView": 2,
        "spaceBetween": 20
      },
      "576": {
        "slidesPerView": 2,
        "spaceBetween": 30
      },
      "768": {
        "slidesPerView": 3,
        "spaceBetween": 40
      },
      "992": {
        "slidesPerView": 3,
        "spaceBetween": 60
      },
      "1200": {
        "slidesPerView": 3,
        "spaceBetween": 80
      }
    }
  }'>
    <div class="swiper-wrapper">

      <!-- Team Members -->
      <% @members.each do |member| %>
        <div class="swiper-slide py-2 py-sm-3 px-1 px-sm-2 card border-0 bg-transparent">
          <div class="position-relative team-card-wrapper shadow-sm rounded-3" data-bs-toggle="modal" data-bs-target="#<%= member.first_name %>">
            <img src="<%= asset_path(member.image_filename) %>" class="rounded-3 w-100" alt="<%= member.name %>">
            <div class="card-img-overlay rounded-3 team-overlay" data-bs-toggle="tooltip" data-bs-placement="top" title="Click me for more info!">
              <div class="linkedin-wrapper">
                <a href="<%= member.linkedin_url %>" target="_blank" class="btn btn-icon btn-secondary btn-linkedin btn-md btn-lg-lg bg-white me-1 me-sm-2" onclick="event.stopPropagation();">
                  <i class="bx bxl-linkedin"></i>
                </a>
                <% if member.github? %>
                  <a href="<%= member.github_url %>" target="_blank" class="btn btn-icon btn-secondary btn-github btn-md btn-lg-lg bg-white" onclick="event.stopPropagation();">
                    <i class="bx bxl-github"></i>
                  </a>
                <% end %>
              </div>
            </div>
          </div>
          <div class="card-body text-center px-2 px-sm-3 px-md-4 py-2 py-sm-3 d-flex flex-column align-items-center">
            <h3 class="fs-md fs-lg-lg fw-semibold pt-1 mb-2 text-center" style="word-break: normal; overflow-wrap: break-word; white-space: normal;"><%= member.name %></h3>
          </div>
        </div>
      <% end %>

    </div>
    <!-- Pagination (bullets) -->
    <div class="swiper-pagination position-relative pt-2 mt-4"></div>
  </div>

  <!-- Team Modals -->
  <% @members.each do |member| %>
    <div class="modal fade team-modal" id="<%= member.first_name %>" tabindex="-1" role="dialog" aria-labelledby="<%= member.first_name %>Label" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered modal-lg modal-fullscreen-sm-down" role="document">
        <div class="modal-content">
          <div class="modal-header flex-column flex-sm-row">
            <div class="d-flex flex-column flex-sm-row align-items-center gap-3 gap-sm-4 w-100">
              <div class="profile-image-wrapper flex-shrink-0">
                <img src="<%= asset_path(member.image_filename) %>" alt="<%= member.name %>" class="w-100 h-100">
              </div>
              <div class="flex-grow-1 text-center text-sm-start">
                <h5 class="modal-title fs-5 fs-sm-4" id="<%= member.first_name %>Label"><%= member.name %></h5>
                <div class="social-links justify-content-center justify-content-sm-start mt-2">
                  <a href="<%= member.linkedin_url %>" target="_blank" class="linkedin-link">
                    <i class="bx bxl-linkedin fs-5"></i>
                    <span class="d-none d-sm-inline">Connect on LinkedIn</span>
                    <span class="d-inline d-sm-none">LinkedIn</span>
                  </a>
                  <% if member.github? %>
                    <a href="<%= member.github_url %>" target="_blank" class="github-link">
                      <i class="bx bxl-github fs-5"></i>
                      <span class="d-none d-sm-inline">View GitHub Profile</span>
                      <span class="d-inline d-sm-none">GitHub</span>
                    </a>
                  <% end %>
                </div>
              </div>
            </div>
            <button type="button" class="btn-close position-absolute top-0 end-0 m-3 m-sm-0 position-sm-relative" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body px-3 px-sm-4">
            <%= team_member_bio(member) %>
          </div>
        </div>
      </div>
    </div>
  <% end %>

</section>
