<% if !defined?(@desc) %>
<% @desc = "" %>
<% end %>

<% if defined?(@title) %>
<% @title = @title + " / Gelbhart Inn." %>
<% else %>
<% @title = "Gelbhart Inn." %>
<% end %>

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="UTF-8">
    <title><%= @title %></title>

    <!-- SEO Meta Tags-->
    <meta name="description" content="<%= @desc %>">
    <meta name="keywords" content="">
    <meta name="author" content="Gelbhart Innovations">

    <!-- Viewport-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <!-- Favicon and Touch Icons-->
    <link rel="apple-touch-icon" sizes="180x180" href="<%= asset_path("apple-touch-icon.png") %>">
    <link rel="icon" type="image/png" sizes="32x32" href="<%= asset_path("favicon-32x32.png") %>">
    <link rel="icon" type="image/png" sizes="16x16" href="<%= asset_path("favicon-16x16.png") %>">
    <link rel="manifest" href="<%= asset_path("site.webmanifest") %>">
    <link rel="shortcut icon" href="<%= asset_path("favicon.ico") %>">
    <link rel="icon" href="<%= asset_path("favicon.ico") %>">
    <meta name="msapplication-TileColor" content="#080032">
    <meta name="theme-color" content="#ffffff">

    <!-- Vendor Styles -->
    <link rel="stylesheet" media="screen" href="<%= asset_path("boxicons.min.css") %>" />
    <link rel="stylesheet" media="screen" href="<%= asset_path("swiper-bundle.min.css") %>" />
    <link rel="stylesheet" media="screen" href="<%= asset_path("lightgallery-bundle.min.css") %>" />

    <!-- Main Theme Styles + Bootstrap -->
    <link rel="stylesheet" media="screen" href="<%= asset_path("theme.css") %>">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
</head>

<!-- Body -->

<body>

    <!-- Page Loader - Shows during Turbo navigation -->
    <div id="page-loader" data-turbo-permanent></div>

    <!-- Page wrapper for sticky footer -->
    <!-- Wraps everything except footer to push footer to the bottom of the page if there is little content -->
    <main class="page-wrapper min-vh-100 <%= 'bg-faded-primary' if controller.controller_name == "contacts" %>">

        <% if controller.controller_name != "errors" %>
        <%= render 'shared/header' %>
        <% end %>

        <% if controller.controller_name == "errors" %>
        <%= render 'layouts/error' %>
        <% elsif controller.controller_name == "documents" %>
        <%= render 'layouts/documents' %>
        <% else %>
        <%= yield %>
        <% end %>

    </main>

    <%= render 'shared/footer' %>

    <!-- Back to top button -->
    <a href="#top" class="btn-scroll-top" data-scroll role="button" target="_blank">
        <span class="btn-scroll-top-tooltip text-muted fs-sm me-2">Top</span>
        <i class="btn-scroll-top-icon bx bx-chevron-up" role="none"></i>
    </a>

    <!-- Vendor Scripts -->
    <script src="<%= asset_path("bootstrap.bundle.min.js") %>"></script>
    <script src="<%= asset_path("smooth-scroll.polyfills.min.js") %>"></script>
    <script src="<%= asset_path("cleave.min.js") %>"></script>
    <script src="<%= asset_path("jarallax.min.js") %>"></script>
    <script src="<%= asset_path("parallax.min.js") %>"></script>
    <script src="<%= asset_path("swiper-bundle.min.js") %>"></script>
    <script src="<%= asset_path("lightgallery.min.js") %>"></script>
    <script src="<%= asset_path("lg-fullscreen.min.js") %>"></script>
    <script src="<%= asset_path("lg-zoom.min.js") %>"></script>
    <script src="<%= asset_path("lg-video.min.js") %>"></script>
    <script src="<%= asset_path("lg-thumbnail.min.js") %>"></script>
    <!-- Load lottie-player only if not already registered (prevents Turbo navigation errors) -->
    <script id="lottie-player-loader">
      (function() {
        // Check if lottie-player is already registered
        if (typeof customElements !== 'undefined' && !customElements.get('lottie-player')) {
          // Only load if not already in the document
          if (!document.querySelector('script[src*="lottie-player.js"]')) {
            var script = document.createElement('script');
            script.src = '<%= asset_path("lottie-player.js") %>';
            script.setAttribute('data-turbo-permanent', 'true');
            document.head.appendChild(script);
          }
        }
        // Remove this loader script to prevent re-execution
        var loader = document.getElementById('lottie-player-loader');
        if (loader) loader.remove();
      })();
    </script>
    <script src="<%= asset_path("rellax.min.js") %>"></script>

    <!-- Main Theme Script -->
    <!-- Initialize global mode and root variables before theme.min.js loads -->
    <script>
      // These must be bare global variables for theme.min.js to access them
      var mode = window.localStorage.getItem('mode');
      var root = document.getElementsByTagName('html')[0];
      
      // Apply dark mode if needed
      if (mode !== null && mode === 'dark') {
        root.classList.add('dark-mode');
      } else {
        root.classList.remove('dark-mode');
      }
    </script>
    <script src="<%= asset_path("theme.min.js") %>"></script>
</body>

</html>